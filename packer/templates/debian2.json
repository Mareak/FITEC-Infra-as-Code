{
  "variables": {
    "ARM_CLIENT_ID": "{{env `ARM_CLIENT_ID`}}",
    "ARM_CLIENT_SECRET": "{{env `ARM_CLIENT_SECRET`}}",
    "ARM_TENANT_ID": "{{env `ARM_TENANT_ID`}}",
    "ARM_SUBSCRIPTION_ID": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "URL_GIT": "{{env `URL_GIT`}}"
  },

  "builders": [{
    "type": "azure-arm",
    
    "client_id": "{{user `ARM_CLIENT_ID`}}",
    "client_secret": "{{user `ARM_CLIENT_SECRET`}}",
    "tenant_id": "{{user `ARM_TENANT_ID`}}",
    "subscription_id": "{{user `ARM_SUBSCRIPTION_ID`}}",

    "managed_image_resource_group_name": "mareak.fitec.P1.RG",
    "managed_image_name": "debianS2",

    "os_type": "Linux",
    "image_publisher": "Debian",
    "image_offer": "debian-10",
    "image_sku": "10",

    "azure_tags": {
        "dept": "Engineering",
        "task": "Image deployment"
    },
    "location": "East US",
    "vm_size": "Standard_DS2_v2"
  }],
    "provisioners": [
      {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",
        "apt-get -y install python3 python3-apt ansible cifs-utils",
		"echo 'nameserver 10.0.2.33' >> /etc/resolv.conf"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
      },
      {
      "type": "ansible-local",
      "playbook_file": "packer/files/ansible/playbookS1S2.yml",
      "role_paths": [
            "packer/files/ansible/roles/wordpress"
      ]
      },
      {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "type": "shell",
      "script": "packer/files/scripts/storage-az.sh"
      },
      {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
     }]
}
