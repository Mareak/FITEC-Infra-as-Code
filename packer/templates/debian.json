{
  "variables": {
    "ARM_CLIENT_ID": "{{env `ARM_CLIENT_ID`}}",
    "ARM_CLIENT_SECRET": "{{env `ARM_CLIENT_SECRET`}}",
    "ARM_TENANT_ID": "{{env `ARM_TENANT_ID`}}",
    "ARM_SUBSCRIPTION_ID": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "URL_GIT": "{{env `URL_GIT`}}"
  },

  "builders": [{
    "type": "azure-arm",
    
    "client_id": "{{user `ARM_CLIENT_ID`}}",
    "client_secret": "{{user `ARM_CLIENT_SECRET`}}",
    "tenant_id": "{{user `ARM_TENANT_ID`}}",
    "subscription_id": "{{user `ARM_SUBSCRIPTION_ID`}}",

    "managed_image_resource_group_name": "mareak.fitec.P1.RG",
    "managed_image_name": "debianS1",

    "os_type": "Linux",
    "image_publisher": "Debian",
    "image_offer": "debian-10",
    "image_sku": "10",

    "azure_tags": {
        "dept": "Engineering",
        "task": "Image deployment"
    },
    "location": "East US",
    "vm_size": "Standard_DS2_v2"
  }],
    "provisioners": [
	  { 
      "type": "file",
      "source": "packer/files/ansible",
      "destination": "/tmp"
      },
      {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",
        "apt-get -y install nginx python3 python3-apt ansible",
        "mkdir /ansible && cp -R /tmp/ansible /ansible",
        "chmod -R 755 /ansible && chown -R root:root /ansible",
        " echo '10.0.2.36 S5' >> /etc/hosts",
        " echo '10.0.2.36 S4' >> /etc/hosts",
        " echo '10.0.2.35 S3' >> /etc/hosts",
        " echo '10.0.2.34 S2' >> /etc/hosts",
        " echo '10.0.2.33 S1' >> /etc/hosts"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
      },
      {
      "type": "ansible-local",
      "playbook_file": "packer/files/ansible/playbook.yml",
	  "role_paths": [
            "packer/files/ansible/roles/dnsmasq"
      ]
      },
      {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
     }]
}
